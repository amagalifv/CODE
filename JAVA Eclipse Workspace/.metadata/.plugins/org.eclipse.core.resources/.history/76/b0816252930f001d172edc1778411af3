package edu_it;
import java.util.*;

public class U1_Clase2 {

	public static void main(String[] args) {
		
		int i;
		//Scanner cin = new Scanner (System.in);
		System.out.println("Ingrese un numero para comenzar la Conjetura de Collatz: ");
		int operacion = cin.nextInt();
		
		for (i=0; operacion>1 ; i++) {
			
			if (operacion%2==0) {
				operacion=operacion/2;
			}else {
				operacion=(3*operacion)+1;
			}
			System.out.println("Valor: "+operacion);
		}
				
		System.out.println("i = " + i);
	}

}